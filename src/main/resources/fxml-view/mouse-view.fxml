<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane fx:id="mouseView" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.pollub.controllers.MouseController">
    <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER">
            <Label id="poseLabel" fx:id="waveOutLabel" styleClass="poseLabel" text="Wskaźnik:" wrapText="true" />
            <TextField fx:id="currentPosition" editable="false" mouseTransparent="true" promptText="BRAK DANYCH" />
        </HBox>
        <HBox alignment="CENTER">
            <Label id="poseLabel" fx:id="fistLabel" text="FIST" />
            <Label id="poseDescriptionLabel" text="Włącza/Wyłącza Tryb myszki (&gt;4s)" />
            <ImageView fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@images/fist.png" />
            </ImageView>
        </HBox>
        <HBox alignment="CENTER">
            <Label id="poseLabel" fx:id="fingersSpreadLabel" text="FINGERS" />
            <Label id="poseDescriptionLabel" text="Prawy p. myszki (tryb myszki)" />
            <ImageView fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@images/fingers.png" />
            </ImageView>
        </HBox>
    </VBox>
</AnchorPane>
